<%include partials/header%>
<%include partials/footer%>
<div class="ui container">
<div class="ui segment">
<a href="/" class="ui basic button">Back</a>
<div class="ui segment">
<h2><%=data.pstname%></h2>
<%=data.date.toDateString()%><br/><br/>
<div class="segment">
<img src="<%=data.image%>" height=600px width=1060px><br/>
</div>
